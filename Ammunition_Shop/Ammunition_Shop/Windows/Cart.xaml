<Window x:Class="Ammunition_Shop.Windows.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ammunition_Shop.Windows"
        mc:Ignorable="d"
        Title="Cart" Height="616.5" Width="918.5">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Ammunition_Shop;component/Image/BGA.png" Stretch="None"/>
        </Grid.Background>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="418" Margin="10,93,0,0" VerticalAlignment="Top" Width="890" FontSize="22"/>
        <Label Content="Корзина" HorizontalAlignment="Left" Margin="352,10,0,0" VerticalAlignment="Top" Width="220" Height="78" FontSize="48" FontFamily="Segoe UI Black"/>
        <Button Content="Купить" HorizontalAlignment="Left" Margin="10,534,0,0" VerticalAlignment="Top" Width="112" Height="44" FontSize="24" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="9"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
